pipeline {
    agent any

    stages {
        stage('Test Kubeconfig on Windows') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'k8s-secret-file', variable: 'KUBECONFIG_PATH')]) {
                        // Set KUBECONFIG and run kubectl command
                        bat """
                            set KUBECONFIG=%KUBECONFIG_PATH%
                            kubectl version
                            kubectl get pods --all-namespaces
                        """
                    }
                }
            }
        }
    }
}
